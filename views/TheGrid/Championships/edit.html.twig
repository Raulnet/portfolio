{% extends 'TheGrid/layout.html.twig' %}
{% set game = 'index' %}

{% block content %}
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="{{ path('the_grid_championships') }}">{{ 'championships'|trans }}</a></li>
            <li><a href="{{ path('the_grid_show_championship', {'id': championship.id}) }}"> {{ championship.title }}</a></li>
            <li class="active">edit championship<li>
        </ol>
    </div>

    <div class="col-sm-5 well">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.cha_title) }}
        </div>
        <div class="form-group">
            <div class="btn-group pull-right">
                <a class="btn btn-default" href="{{ path('the_grid_show_championship', {'id': championship.id}) }}">Retour</a>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#delet_championship">
                    supprimer
                </button>
            </div>
            {{ form_row(form.enregistrer) }}
        </div>
        {{ form_end(form) }}
    </div>
    <div class="modal fade" id="delet_championship" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Supprimer {{ championship.title }} ?</h4>
                </div>
                <div class="modal-body">
                    Attention vous allez supprimé l'intégrailté des données lier à {{ championship.title }} !!!<br />
                    Confirmer ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">retour</button>
                    <a class="btn btn-danger" href="{{ path('the_grid_delete_championship', {'id': championship.id}) }}">Confirmer</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
