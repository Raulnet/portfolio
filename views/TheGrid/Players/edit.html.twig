{% extends "/TheGrid/layout.html.twig" %}
{% set game = 'index' %}

{% block content %}
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="{{ path('the_grid_championships') }}">{{ 'championships'|trans }}</a></li>
            <li><a href="{{ path('the_grid_players') }}">{{ 'players'|trans }}</a></li>
            <li class="active">edit player<li>
        </ol>
    </div>

    <div class="col-sm-5 well">
        {{ form_start(form)}}
        <div class="form-group">
            {{ form_label(form.pla_nickname)}}
            {{ form_widget(form.pla_nickname)}}
            {{ form_errors(form.pla_nickname)}}
        </div>
        <div class="form-group">
            {{ form_label(form.pla_mail)}}
            {{ form_widget(form.pla_mail)}}
            {{ form_errors(form.pla_mail)}}
        </div>
        <div class="form-group">
            {{ form_label(form.pla_support)}}
            {{ form_widget(form.pla_support)}}
            {{ form_errors(form.pla_support)}}
        </div>
        <div class="form-group">
            {{ form_label(form.pla_comment)}}
            {{ form_widget(form.pla_comment)}}
            {{ form_errors(form.pla_comment)}}
        </div>
        <div class="form-group">
            <div class="btn-group pull-right">
                <a type="button" class="btn btn-danger" data-toggle="modal" data-target="#delete_player">supprimer</a>
                <a class="btn btn-default" href="{{ path('the_grid_players') }}">annuler</a>
            </div>
            <div class="modal fade" id="delete_player" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Supprimer {{ player.nickname }} ?</h4>
                        </div>
                        <div class="modal-body">
                            Attention vous allez supprimer {{ player.nickname }} !<br />
                            Ainsi que les resultats li√© !<br />
                            Confirmer ?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <a class="btn btn-danger" href="{{ path('the_grid_delete_player', {'id': player.id}) }}">Confirmer</a>
                        </div>
                    </div>
                </div>
            </div>

            {{ form_row(form.enregistrer)}}
        </div>

        {{ form_end(form)}}
    </div>

{% endblock %}