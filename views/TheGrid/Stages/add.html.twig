{% extends "/TheGrid/layout.html.twig" %}
{% set game = 'index' %}


{% block content %}
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="{{ path('the_grid_championships') }}">home</a></li>
            <li><a href="{{ path('the_grid_show_championship', {'id': championship.id}) }}">{{ championship.title }}</a></li>
            <li class="active">add stage</li>
        </ol>
    </div>
    {% if stages|length > 0 %}
        <div class="col-sm-5 well">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.sta_title) }}
            </div>
            <div class="form-group">
                {{ form_row(form.sta_sequence) }}
            </div>
            <div class="form-group">
                <a class="btn btn-default pull-right" href="{{ path('the_grid_show_championship', {'id': championship.id}) }}">Annuler</a>
                {{ form_row(form.enregistrer) }}
            </div>
            {{ form_end(form) }}
        </div>
    {% else %}
        <div class="col-sm-5 well">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.nbr_stage) }}
            </div>
            <div class="form-group">
                {{ form_row(form.title_stage) }}
            </div>
            <hr>
            <div class="form-group">
                {{ form_row(form.nbr_round) }}
            </div>
            <div class="form-group">
                {{ form_row(form.title_round) }}
            </div>
            <div class="form-group">
                <a class="btn btn-default pull-right" href="{{ path('the_grid_show_championship', {'id': championship.id}) }}">Annuler</a>
                {{ form_row(form.valider) }}
            </div>
            {{ form_end(form) }}
        </div>
    {% endif %}
{% endblock %}
